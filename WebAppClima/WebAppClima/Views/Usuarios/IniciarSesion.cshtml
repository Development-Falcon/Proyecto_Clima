@model WebAppClima.Models.Usuarios

@{
    ViewBag.Title = "Inicio de Sesión";
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head runat="server">
        <link href="~/Content/Assets/IniciarSesion/Iniciar.Sesion.css" rel="stylesheet" />
        <link href="~/Content/Assets/Plugins/sweetalert2/sweetalert.css" rel="stylesheet" />
        <link href="~/Content/Assets/Plugins/Simple_Line_Icons/simple-line-icons.min.css" rel="stylesheet" />
        <link href="~/Content/Assets/Plugins/bootstrap-icons-1.2.2/font/bootstrap-icons.css" rel="stylesheet" />

        <script src="~/Scripts/Utilidades.js"></script>
        <script src="~/Scripts/IniciarSesion.js"></script>
        <script src="~/Content/Assets/Plugins/sweetalert2/sweetalert.js"></script>
        <script src="~/Content/Assets/Plugins/jquery/jquery.3.5.1.min.js"></script>
        <script src="~/Content/Assets/Plugins/loadingoverlay/loadingoverlay.js"></script>
    </head>
    <body>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @*
            [JavCaHu] Este Formulario esta oculto por las class="modal fade" y se puede habilitar desde el controlador cambiando a class="modal-body" para hacerlo visible.
            *@
            <!-- Modal -->
        <div class="modal-body" id="modalrol" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header alert-warning">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.href='@Url.Action("Index", "Home")'">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" style="text-align:center">Inicio de Sesión</h4>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="registration-form alert-success">
                        @{ 
                            if (!string.IsNullOrEmpty(ViewBag.Mensaje_Error))
                            {
                                <div class="alert alert-danger">@ViewBag.Mensaje_Error</div>
                            }
                        }
                        <form>
                            <div class="form-icon">
                                <span><i class="bi bi-person-fill"></i></span>
                            </div>
                            <div class="form-group" style="margin-left:17%">
                                @Html.LabelFor(model => model.Usuario, "Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control item" } })
                                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" style="margin-left:17%">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control item" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" style="width:64%; margin-left:18%">
                                <button id="btnIniciarSesion" type="submit" class="btn btn-block btn-sm btn-primary mr-1" style="border:outset; height:44px; font-size: 18px; font-weight: bold" value="InicuarSesion">Iniciar Sesión</button>
                            </div>
                        </form>
                    </div>
                    <div class="social-media" style="text-align:center; margin-top:2%">
                        <p>&copy; [JavCaHu] Todos los derechos reservados</p>
                    </div>
                </div>
            </div>
        </div>
        }
    </body>
</html>
