@model WebAppClima.Models.Clima

@{
    ViewBag.Title = "Información del Clima";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*
        [JavCaHu] Este Formulario esta oculto por las class="modal fade" y se puede habilitar desde el controlador cambiando a class="modal-body" para hacerlo visible.
    *@
    <!-- Modal -->
    <div class="modal-body" id="modalrol" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Datos del Clima</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.href='@Url.Action("Index", "Clima")'">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="modal-body">
                    <form>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Ciudad, "Nombre Ciudad", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Ciudad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Celsius, "Temp ºC", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Celsius, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Celsius, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Fahrenheit, "Temp ºF", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Fahrenheit, new { htmlAttributes = new { @class = "form-control", @Value = "0.00", @disabled = true, @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Fahrenheit, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Latitud, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Latitud, new { htmlAttributes = new { @class = "form-control", @Value = "0.00" } })
                                @Html.ValidationMessageFor(model => model.Latitud, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Longitud, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Longitud, new { htmlAttributes = new { @class = "form-control", @Value = "0.00" } })
                                @Html.ValidationMessageFor(model => model.Longitud, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control datepicker", @Value = DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss"), @disabled = true, @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "Clima")'">Cerrar</button>
                    <button id="btnGuardarCambios" type="submit" class="btn btn-sm btn-primary" value="Crear">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
