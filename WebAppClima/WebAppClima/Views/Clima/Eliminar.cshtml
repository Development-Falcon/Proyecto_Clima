@model WebAppClima.Models.Clima

@*
    [JavCaHu] Este Formulario esta oculto por las class="modal fade" y se puede habilitar desde el controlador cambiando a class="modal-body" para hacerlo visible.
*@
<!-- Modal -->
<div class="modal-body" id="modalrol" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel">Eliminación Datos del Clima</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.href='@Url.Action("Index", "Clima")'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Ciudad, "Nombre Ciudad", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Ciudad, new { htmlAttributes = new { @class = "form-control", @disabled = true, @readonly = true } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Celsius, "Temp ºC", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Celsius, new { htmlAttributes = new { @class = "form-control", @disabled = true, @readonly = true } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Fahrenheit, "Temp ºF", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Fahrenheit, new { htmlAttributes = new { @class = "form-control", @disabled = true, @readonly = true } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Latitud, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Latitud, new { htmlAttributes = new { @class = "form-control", @disabled = true, @readonly = true } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Longitud, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Longitud, new { htmlAttributes = new { @class = "form-control", @disabled = true, @readonly = true } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control datepicker", @disabled = true, @readonly = true } })
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "Clima")'">Cerrar</button>
                    <button type="submit" value="Eliminar" class="btn btn-sm btn-primary" onclick='return confirm("¿Está seguro que desea eliminar el registro?")'>Confirma Eliminación</button>
                }
            </div>
        </div>
    </div>
</div>
